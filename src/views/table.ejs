<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title><%= projectName %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="container-fluid d-flex p-0">
      <!-- SIDEBAR -->
      <%- include("../components/sidebar") %>
      <!-- CONTENT -->
      <div class="content w-100">
        <!-- TOP NAV -->
        <nav class="navbar navbar-expand bg-secondary navbar-dark px-4 py-2">
          <span class="navbar-text text-light">Users Table</span>
        </nav>

        <!-- TABLE -->
        <div class="container-fluid pt-4 px-4">
          <div class="row g-4">
            <% tables.forEach(t => { %>
            <div class="col-sm-12 col-xl-6">
              <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4"><%= t.title %></h6>

                <table class="<%= t.class %>">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>First Name</th>
                      <th>Last Name</th>
                      <th>Email</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% rows.forEach(r => { %>
                    <tr>
                      <th><%= r.scope %></th>
                      <td><%= r.first %></td>
                      <td><%= r.last %></td>
                      <td><%= r.email %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
            <% }) %>
          </div>

          <!-- RESPONSIVE TABLE -->
          <div class="row g-4 mt-2">
            <div class="col-12">
              <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Responsive Table</h6>

                <div class="table-responsive">
                  <table class="table table-striped table-dark">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Country</th>
                        <th>ZIP</th>
                        <th>Status</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% rows.forEach(item => { %>
                      <tr>
                        <th><%= item.scope %></th>
                        <td><%= item.first %></td>
                        <td><%= item.last %></td>
                        <td><%= item.email %></td>
                        <td><%= item.country %></td>
                        <td><%= item.zip %></td>
                        <td><%= item.status %></td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- FOOTER -->
        <div class="container-fluid pt-4 px-4">
          <%- include("../components/footer") %>
        </div>
      </div>
    </div>
  </body>
</html>
